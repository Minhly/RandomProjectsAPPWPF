<Window x:Class="WPF_Login_Screen_SQL.CreateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Login_Screen_SQL"
        mc:Ignorable="d"
        Title="CreateUser" Height="450" Width="400" Background="Orange">
    <Border Background="LightYellow" CornerRadius="20" Margin="20">
        <StackPanel>
            <Label Content="Create User Page" FontSize="20" Background="Orange" Foreground="PapayaWhip" HorizontalContentAlignment="Center"/>
            <Label Content="Username: " FontSize="15" Foreground="Orange"/>
            <TextBox Name="dbUsername" FontSize="25" Background="Orange" Padding="2"/>
            <Label Content="Password: " FontSize="15" Foreground="Orange"/>
            <TextBox Name="dbPassword" FontSize="25" Background="Orange" Padding="2"/>
            <Button Name="dbSubmit" IsDefault="True" Click="dbSubmit_Click" Content="Create User" Background="Orange" Foreground="PapayaWhip" FontSize="28" Margin="70 10"/>
        </StackPanel>
        </Border>
</Window>
